
@model List<PageViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_Adminlayout.cshtml";
}
<style>
    table {
        width: 100%;
        border-collapse: collapse;
        table-layout: fixed; /* Tablonun genişliğini sabitler */
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        max-height: 100px; /* Hücre maksimum yüksekliği */
        overflow: hidden; /* Taşan içeriği gizler */
        text-overflow: ellipsis; /* Taşan içeriği ... ile gösterir */
        white-space: nowrap; /* Metni tek satırda tutar */
        vertical-align: top; /* İçeriği üstte hizalar */
    }

    th {
        background-color: #f2f2f2;
        text-align: left;
    }
</style>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Content ID</th>
        <th>Menu Order</th>
        <th>Delete</th>
        <th>Update</th>
        <th>Is Active?</th>
    </tr> 
        
   
    @foreach (var item in Model)
    {
        <tr>

            <td>@item.PageId</td>
            <td>@item.ContentId</td>
            <td>@item.MenuOrder</td>
            

            <td><a href="/Page/DeletePage/@item.PageId" class="btn btn-danger">Delete</a></td>
            <td><a href="/Page/UpdatePage/@item.PageId" class="btn btn-success">Update</a></td>
            <td>
                <a href="#" class="btn @(item.IsActive ? "btn-success" : "btn-danger")">
                    @(item.IsActive ? "True" : "False")
                </a>
            </td>
            <!-- <td><a href="#" class="btn btn-Dark">Details</a></td> -->
        </tr>
    }
</table>
<a href="/Page/AddPage" class="btn btn-info">New Page Entry</a>
